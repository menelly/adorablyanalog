After=network.target
Wants=network.target

[Service]
Type=simple
User=thereny
Group=thereny
WorkingDirectory=/home/Ace/adorablyanalog
Environment=PATH=/usr/bin:/usr/local/bin:/home/chaos/.local/bin
Environment=PYTHONPATH=/home/Ace/adorablyanalog
Environment=FLASK_APP=app.py
